<div class="row">
  <div class="col-lg-10 mx-auto">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1>All Posts</h1>
      <% if user_signed_in? %>
        <%= link_to 'New Post', new_post_path, class: 'btn btn-primary' %>
      <% end %>
    </div>

    <!-- Search and Filter Form -->
    <div class="row mb-4">
      <div class="col-md-8">
        <%= form_with url: posts_path, method: :get, local: true, class: "d-flex" do |form| %>
          <%= form.text_field :search, 
              value: params[:search], 
              placeholder: "Search posts by title or content...", 
              class: "form-control me-2" %>
          <%= form.hidden_field :category_id, value: params[:category_id] %>
          <%= form.submit "Search", class: "btn btn-outline-primary" %>
        <% end %>
      </div>
      <div class="col-md-4">
        <%= form_with url: posts_path, method: :get, local: true do |form| %>
          <%= form.select :category_id, 
              options_from_collection_for_select(Category.alphabetical, :id, :name, params[:category_id]),
              { prompt: "All Categories" },
              { class: "form-select", onchange: "this.form.submit();" } %>
          <%= form.hidden_field :search, value: params[:search] %>
        <% end %>
      </div>
    </div>

    <!-- Search Results Info -->
    <% if params[:search].present? || params[:category_id].present? %>
      <div class="alert alert-info">
        Showing 
        <% if params[:search].present? %>
          search results for "<strong><%= params[:search] %></strong>"
        <% end %>
        <% if params[:category_id].present? %>
          in category "<strong><%= Category.find(params[:category_id]).name %></strong>"
        <% end %>
        (<%= @posts.count %> found)
        <%= link_to 'Clear filters', posts_path, class: 'btn btn-sm btn-outline-secondary ms-2' %>
      </div>
    <% end %>

    <!-- Posts List -->
    <% if @posts.any? %>
      <% @posts.each do |post| %>
        <div class="card mb-4">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-start mb-2">
              <h3 class="card-title mb-0">
                <%= link_to post.title, post_path(post), class: 'text-decoration-none' %>
              </h3>
              <% if post.category %>
                <%= link_to post.category.name, category_path(post.category), 
                    class: 'badge bg-primary text-decoration-none' %>
              <% end %>
            </div>
            <p class="text-muted">
              By <%= post.user.display_name %> â€¢ 
              <%= time_ago_in_words(post.created_at) %> ago
            </p>
            <p class="card-text"><%= truncate(post.content, length: 200) %></p>
            
            <div class="d-flex gap-2">
              <%= link_to 'Read More', post_path(post), class: 'btn btn-sm btn-outline-primary' %>
              <% if user_signed_in? && current_user == post.user %>
                <%= link_to 'Edit', edit_post_path(post), class: 'btn btn-sm btn-warning' %>
                <%= link_to 'Delete', post_path(post), method: :delete, 
                            confirm: 'Are you sure?', class: 'btn btn-sm btn-danger' %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="text-center p-5">
        <h3>No posts found!</h3>
        <p class="text-muted">
          <% if params[:search].present? || params[:category_id].present? %>
            Try adjusting your search criteria.
          <% else %>
            Be the first to share something with the community.
          <% end %>
        </p>
        <% if user_signed_in? %>
          <%= link_to 'Create New Post', new_post_path, class: 'btn btn-primary' %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>