<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <%= link_to '← Back to Posts', posts_path, class: 'btn btn-default' %>
      
      <div class="post-header">
        <h1><%= @post.title %></h1>
        <p class="text-muted">
          By <%= @post.user.email %> • 
          Published <%= @post.created_at.strftime("%B %d, %Y at %I:%M %p") %>
          <% if @post.updated_at != @post.created_at %>
            • Updated <%= time_ago_in_words(@post.updated_at) %> ago
          <% end %>
        </p>
      </div>

      <div class="post-content">
        <%= simple_format(@post.content) %>
      </div>

      <% if user_signed_in? && current_user == @post.user %>
        <div class="post-actions">
          <hr>
          <%= link_to 'Edit Post', edit_post_path(@post), class: 'btn btn-warning' %>
          <%= link_to 'Delete Post', post_path(@post), method: :delete, 
                      confirm: 'Are you sure you want to delete this post?', 
                      class: 'btn btn-danger' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
