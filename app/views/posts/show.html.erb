<div class="row">
  <div class="col-lg-8 mx-auto">
    <%= link_to '← Back to Posts', posts_path, class: 'btn btn-outline-secondary mb-3' %>
    
    <div class="card">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-start mb-3">
          <div>
            <% if @post.category %>
              <%= link_to @post.category.name, category_path(@post.category), 
                  class: 'badge bg-primary text-decoration-none mb-2' %>
            <% end %>
            <h1 class="card-title"><%= @post.title %></h1>
          </div>
        </div>
        
        <p class="text-muted border-bottom pb-3 mb-4">
          By <%= @post.user.email %> • 
          Published <%= @post.created_at.strftime("%B %d, %Y at %I:%M %p") %>
          <% if @post.updated_at != @post.created_at %>
            • Updated <%= time_ago_in_words(@post.updated_at) %> ago
          <% end %>
        </p>

        <div class="post-content">
          <%= simple_format(@post.content) %>
        </div>

        <% if user_signed_in? && current_user == @post.user %>
          <hr>
          <div class="d-flex gap-2">
            <%= link_to 'Edit Post', edit_post_path(@post), class: 'btn btn-warning' %>
            <%= link_to 'Delete Post', post_path(@post), method: :delete, 
                        confirm: 'Are you sure you want to delete this post?', 
                        class: 'btn btn-danger' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>