<div class="row">
  <div class="col-md-6 mx-auto">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2>Edit Profile</h2>
      <%= link_to 'Cancel', @user, class: 'btn btn-outline-secondary' %>
    </div>

    <%= form_with(model: @user, local: true, class: 'row g-3') do |form| %>
      <% if @user.errors.any? %>
        <div class="col-12">
          <div class="alert alert-danger">
            <h4><%= pluralize(@user.errors.count, "error") %> prohibited this profile from being saved:</h4>
            <ul class="mb-0">
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      <% end %>

      <div class="col-md-6">
        <%= form.label :first_name, class: 'form-label' %>
        <%= form.text_field :first_name, class: 'form-control', placeholder: 'Your first name' %>
      </div>

      <div class="col-md-6">
        <%= form.label :last_name, class: 'form-label' %>
        <%= form.text_field :last_name, class: 'form-control', placeholder: 'Your last name' %>
      </div>

      <div class="col-12">
        <%= form.label :location, class: 'form-label' %>
        <%= form.text_field :location, class: 'form-control', placeholder: 'City, Country' %>
      </div>

      <div class="col-12">
        <%= form.label :bio, class: 'form-label' %>
        <%= form.text_area :bio, rows: 4, class: 'form-control', 
                           placeholder: 'Tell us about yourself...' %>
        <div class="form-text">Maximum 500 characters</div>
      </div>

      <div class="col-12">
        <%= form.submit 'Update Profile', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>