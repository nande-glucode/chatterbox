<div class="row">
  <div class="col-lg-8 mx-auto">
    <%= link_to 'â† Back to Browse', users_path, class: 'btn btn-outline-secondary mb-3' %>
    
    <div class="card">
      <div class="card-body">
        <div class="row">
          <div class="col-md-8">
            <h1 class="card-title"><%= @user.display_name %></h1>
            <p class="text-muted"><%= @user.email %></p>
            
            <% if @user.safe_location.present? %>
              <p class="text-muted">
                <i class="fas fa-map-marker-alt"></i> <%= @user.safe_location %>
              </p>
            <% end %>
            
            <% if @user.safe_bio.present? %>
              <div class="mt-3">
                <h6>About</h6>
                <p><%= simple_format(@user.safe_bio) %></p>
              </div>
            <% end %>
          </div>
          
          <div class="col-md-4 text-md-end">
            <% if @user == current_user %>
              <%= link_to 'Edit Profile', edit_user_path(@user), class: 'btn btn-warning mb-2' %>
            <% else %>
              <% if current_user.contact_with?(@user) %>
                <p class="badge bg-success fs-6 mb-2">You are contacts</p>
              <% elsif @contact_request_status == 'pending' %>
                <p class="badge bg-warning fs-6 mb-2">Request pending</p>
              <% elsif @contact_request_status.nil? %>
                <%= form_with model: Contact.new, url: contacts_path, local: true do |form| %>
                  <%= form.hidden_field :requested_id, value: @user.id %>
                  <%= form.submit 'Send Contact Request', class: 'btn btn-success mb-2' %>
                <% end %>
              <% end %>
            <% end %>
            
            <div class="mt-3">
              <p class="text-muted mb-1">
                <strong><%= @user.posts.count %></strong> posts
              </p>
              <p class="text-muted mb-1">
                <strong><%= @user.contacts.count %></strong> contacts
              </p>
              <p class="text-muted">
                Joined <%= @user.created_at.strftime("%B %Y") %>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Recent Posts -->
    <% if @posts.any? %>
      <div class="mt-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
          <h4>Recent Posts</h4>
          <%= link_to 'View All Posts', posts_path(search: @user.email), class: 'btn btn-sm btn-outline-primary' %>
        </div>
        
        <% @posts.each do |post| %>
          <div class="card mb-3">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-start mb-2">
                <h5 class="card-title mb-0">
                  <%= link_to post.title, post_path(post), class: 'text-decoration-none' %>
                </h5>
                <% if post.category %>
                  <%= link_to post.category.name, category_path(post.category), 
                      class: 'badge bg-primary text-decoration-none' %>
                <% end %>
              </div>
              <p class="text-muted small">
                <%= time_ago_in_words(post.created_at) %> ago
              </p>
              <p class="card-text"><%= truncate(post.content, length: 150) %></p>
              <%= link_to 'Read More', post_path(post), class: 'btn btn-sm btn-outline-primary' %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="mt-4 text-center p-4 bg-light rounded">
        <p class="text-muted mb-0">
          <% if @user == current_user %>
            You haven't created any posts yet.
            <%= link_to 'Create your first post', new_post_path, class: 'btn btn-sm btn-primary ms-2' %>
          <% else %>
            <%= @user.display_name %> hasn't created any posts yet.
          <% end %>
        </p>
      </div>
    <% end %>
  </div>
</div>