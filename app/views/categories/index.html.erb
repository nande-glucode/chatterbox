<div class="row">
  <div class="col-lg-8 mx-auto">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1>Categories</h1>
      <%= link_to 'All Posts', posts_path, class: 'btn btn-outline-primary' %>
    </div>

    <div class="row">
      <% @categories.each do |category| %>
        <div class="col-md-6 mb-4">
          <div class="card h-100">
            <div class="card-body">
              <h5 class="card-title">
                <%= link_to category.name, category_path(category), class: 'text-decoration-none' %>
              </h5>
              <p class="card-text text-muted"><%= category.description %></p>
              <div class="d-flex justify-content-between align-items-center">
                <small class="text-muted">
                  <%= pluralize(category.posts.count, 'post') %>
                </small>
                <%= link_to 'View Posts', category_path(category), class: 'btn btn-sm btn-primary' %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <% if @categories.empty? %>
      <div class="text-center p-5">
        <h3>No categories yet!</h3>
        <p class="text-muted">Categories will help organize posts by topic.</p>
      </div>
    <% end %>
  </div>
</div>