<div class="row">
  <div class="col-lg-10 mx-auto">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <h1><%= @category.name %></h1>
        <p class="text-muted mb-0"><%= @category.description %></p>
      </div>
      <div>
        <%= link_to 'All Categories', categories_path, class: 'btn btn-outline-secondary me-2' %>
        <%= link_to 'All Posts', posts_path, class: 'btn btn-outline-primary' %>
      </div>
    </div>

    <!-- Search form for this category -->
    <div class="row mb-4">
      <div class="col-md-6">
        <%= form_with url: category_path(@category), method: :get, local: true, class: "d-flex" do |form| %>
          <%= form.text_field :search, 
              value: params[:search], 
              placeholder: "Search in #{@category.name}...", 
              class: "form-control me-2" %>
          <%= form.submit "Search", class: "btn btn-outline-primary" %>
        <% end %>
      </div>
      <% if params[:search].present? %>
        <div class="col-md-6">
          <div class="alert alert-info mb-0">
            Search results for "<strong><%= params[:search] %></strong>" in <%= @category.name %>
            <%= link_to 'Clear', category_path(@category), class: 'btn btn-sm btn-outline-secondary ms-2' %>
          </div>
        </div>
      <% end %>
    </div>

    <% if @posts.any? %>
      <% @posts.each do |post| %>
        <div class="card mb-4">
          <div class="card-body">
            <h3 class="card-title">
              <%= link_to post.title, post_path(post), class: 'text-decoration-none' %>
            </h3>
            <p class="text-muted">
              By <%= post.user.email %> â€¢ 
              <%= time_ago_in_words(post.created_at) %> ago
            </p>
            <p class="card-text"><%= truncate(post.content, length: 200) %></p>
            
            <div class="d-flex gap-2">
              <%= link_to 'Read More', post_path(post), class: 'btn btn-sm btn-outline-primary' %>
              <% if user_signed_in? && current_user == post.user %>
                <%= link_to 'Edit', edit_post_path(post), class: 'btn btn-sm btn-warning' %>
                <%= link_to 'Delete', post_path(post), method: :delete, 
                            confirm: 'Are you sure?', class: 'btn btn-sm btn-danger' %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="text-center p-5">
        <h3>No posts found!</h3>
        <p class="text-muted">
          <% if params[:search].present? %>
            No posts match your search in this category.
          <% else %>
            No posts have been created in this category yet.
          <% end %>
        </p>
        <% if user_signed_in? %>
          <%= link_to 'Create New Post', new_post_path, class: 'btn btn-primary' %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>