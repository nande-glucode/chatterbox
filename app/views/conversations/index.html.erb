<div class="row">
  <div class="col-lg-8 mx-auto">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1>Messages</h1>
      <%= link_to 'My Contacts', contacts_path, class: 'btn btn-outline-primary' %>
    </div>

    <% if @conversations.any? %>
      <% @conversations.each do |conversation| %>
        <div class="card mb-3">
          <div class="card-body">
            <div class="row align-items-center">
              <div class="col-md-8">
                <h5 class="card-title mb-1">
                  <%= link_to conversation.display_name(current_user), conversation, class: 'text-decoration-none' %>
                </h5>
                <% if conversation.last_message %>
                  <p class="text-muted mb-1">
                    <strong><%= conversation.last_message.user.display_name %>:</strong>
                    <%= truncate(conversation.last_message.content, length: 80) %>
                  </p>
                  <small class="text-muted">
                    <%= time_ago_in_words(conversation.last_message.created_at) %> ago
                  </small>
                <% else %>
                  <p class="text-muted mb-0">No messages yet</p>
                <% end %>
              </div>
              <div class="col-md-4 text-md-end">
                <%= link_to 'Open Chat', conversation, class: 'btn btn-primary' %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="text-center p-5">
        <h3>No conversations yet!</h3>
        <p class="text-muted">Start messaging your contacts to see conversations here.</p>
        <%= link_to 'Browse Contacts', contacts_path, class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>